{
  "name": "pod.monster",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=true npm run build",
    "build": "rm -rf .next out && next build",
    "dev": "rm -rf .next out && next dev",
    "format": "npx prettier --write .",
    "lint": "npx eslint --config eslint.config.mjs --max-warnings 0",
    "lint:fix": "npx eslint --config eslint.config.mjs --fix .",
    "prepare": "husky",
    "start": "next start",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@plussub/srt-vtt-parser": "^2.0.5",
    "@sentry/nextjs": "^10.27.0",
