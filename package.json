  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "atdrago",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.js": "npx eslint --config eslint.config.mjs --max-warnings 0",
    "*.{ts,tsx}": "npx eslint --config eslint.config.mjs --max-warnings 0",
    "*.{gql,md,js,json,svg,ts,tsx}": "prettier --write"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "packages/podcast-index"
  ]
