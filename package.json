    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@next/bundle-analyzer": "16.0.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/probe-image-size": "^7.0.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
