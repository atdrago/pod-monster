    "@vanilla-extract/css-utils": "^0.1.4",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.2.0",
    "capsize": "^2.0.0",
    "framer-motion": "^12.0.3",
    "idb": "^8.0.3",
    "next": "15.5.3",
    "next-plugin-svgr": "^1.1.1",
    "opml-to-json": "^1.0.1",
    "postcss": "^8.5.6",
    "probe-image-size": "^7.2.3",
