    "framer-motion": "^5.6.0",
    "next": "12.0.8",
    "next-plugin-svgr": "^1.1.1",
    "opml-to-json": "^1.0.1",
    "pino": "^7.6.3",
    "probe-image-size": "^7.2.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-markdown": "^8.0.0",
    "react-polymorphic-box": "^3.0.3",
    "react-query": "^3.34.8",
    "react-window": "^1.8.6",
    "rehype-parse": "^8.0.3",
    "rehype-raw": "^6.1.1",
    "rehype-sanitize": "^5.0.1",
