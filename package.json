{
  "name": "pod.monster",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=true npm run build",
    "build": "rm -rf .next out && next build",
    "dev": "rm -rf .next out && next dev",
    "format": "npx prettier --write .",
    "lint": "npx eslint --config eslint.config.mjs --max-warnings 0",
    "lint:fix": "npx eslint --config eslint.config.mjs --fix .",
    "prepare": "husky",
    "start": "next start",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "dependencies": {
    "@plussub/srt-vtt-parser": "^2.0.5",
    "@sentry/nextjs": "^8.35.0",
    "@tanstack/react-query": "^5.59.16",
    "@vanilla-extract/css": "^1.16.0",
    "@vanilla-extract/css-utils": "^0.1.4",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.13",
    "capsize": "^2.0.0",
    "framer-motion": "^11.13.4",
    "idb": "^8.0.0",
    "next": "^15.0.1",
    "next-plugin-svgr": "^1.1.1",
    "opml-to-json": "^1.0.1",
    "probe-image-size": "^7.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-polymorphic-box": "^3.0.3",
    "react-query": "^3.39.3",
    "react-window": "^1.8.9",
