    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser": "^4.0.13",
    "@vitest/browser-playwright": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "eslint": "^9.13.0",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
