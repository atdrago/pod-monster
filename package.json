    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-strip-html": "^0.1.1",
    "server-only": "^0.0.1",
    "unified": "^11.0.5",
    "use-debounce": "^10.0.4"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@next/bundle-analyzer": "^15.0.1",
    "@types/jest": "^29.5.13",
    "@types/probe-image-size": "^7.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-window": "^1.8.6",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vanilla-extract/next-plugin": "^2.4.6",
    "babel-jest": "^29.7.0",
    "env-cmd": "^10.1.0",
    "eslint": "^9.13.0",
    "eslint-config-next": "^15.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "husky": "^9.1.6",
    "import-sort-style-atdrago": "^0.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jiti": "^2.3.3",
    "lint-staged": "^15.2.10",
    "podcastdx-client": "^5.0.0",
    "prettier": "3.3.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "typescript": "^5.2.2",
    "webpack": "^5.70.0"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "atdrago",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.js": "npx eslint --config eslint.config.mjs --max-warnings 0",
    "*.{ts,tsx}": "npx eslint --config eslint.config.mjs --max-warnings 0",
    "*.{gql,md,js,json,svg,ts,tsx}": "prettier --write"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "packages/podcast-index"
  ]
